<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>com.rooxteam.corporate</groupId>
        <artifactId>corporate-pom</artifactId>
        <version>27.2</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <packaging>war</packaging>
    <groupId>com.rooxteam.samples.widgets</groupId>
    <artifactId>widget-jquery</artifactId>
    <version>1.0-${BUILD_NUMBER}</version>
    <name>Widgets : Using angularjs</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.rooxteam.wms.sdk</groupId>
                <artifactId>opensocial-maven-plugin</artifactId>
                <version>1.19-32</version>
                <executions>
                    <execution>
                        <id>production</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>plugin</goal>
                        </goals>
                        <configuration>
                            <script>
                                <inline>true</inline>
                                <minify>true</minify>
                                <munge>true</munge>
                            </script>
                            <stylesheet>
                                <inline>false</inline>
                                <minify>true</minify>
                            </stylesheet>
                            <img>
                                <inline>true</inline>
                            </img>
                            <targetDir>target/webapp/</targetDir>
                            <template>
                                <compile>true</compile>
                            </template>
                            <locale>
                                <compile>true</compile>
                            </locale>
                        </configuration>
                    </execution>
                    <execution>
                        <id>development</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>plugin</goal>
                        </goals>
                        <configuration>
                            <script>
                                <inline>false</inline>
                                <minify>false</minify>
                                <munge>false</munge>
                            </script>
                            <stylesheet>
                                <inline>false</inline>
                                <minify>false</minify>
                            </stylesheet>
                            <img>
                                <inline>false</inline>
                            </img>
                            <template>
                                <compile>false</compile>
                            </template>
                            <locale>
                                <compile>false</compile>
                            </locale>
                            <targetDir>target/webapp-dev/</targetDir>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/cm.xml</descriptor>
                        <descriptor>src/main/assembly/cm-dev.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <!-- this is used for inheritance merges -->
                        <phase>package</phase>
                        <!-- bind to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
                <executions>
                    <execution>
                        <id>default-war</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <id>development</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>target/${pom.artifactId}-${pom.version}-cm-dev.zip</file>
                                    <type>zip</type>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                    <execution>
                        <id>production</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>target/${pom.artifactId}-${pom.version}-cm.zip</file>
                                    <type>zip</type>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>roox-releases</id>
            <name>roox-releases</name>
            <url>http://nexus.rooxintra.net/content/repositories/releases</url>
        </repository>
        <repository>
            <id>roox-snapshots</id>
            <name>roox-snapshots</name>
            <url>http://nexus.rooxintra.net/content/repositories/snapshots</url>
        </repository>
    </repositories>

</project>